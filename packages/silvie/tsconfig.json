{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "esnext",
		"moduleResolution": "node",
		"outDir": "./lib",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"]
		},
		"plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }],
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "templates"]
}
